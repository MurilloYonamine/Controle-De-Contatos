@using ControleDeContatos.Enums;
@model AlterarSenhaModel;
@{
    ViewData["Title"] = "Alterar senha do usuário";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div class="text-center">

    <h1 class="display-4">Alterar senha do usuário</h1>

</div>

<form method="post" asp-controller="AlterarSenha" asp-action="Alterar">
    <div class="mb-3">
        <label for="senha" class="form-label">Senha Atual:</label>
        <input type="password" asp-for="SenhaAtual" class="form-control" id="senha" placeholder="Digite a senha atual do usuário:">
        <span class="text-danger">@Html.ValidationMessageFor(valid => valid.SenhaAtual)</span>
    </div>
    <div class="mb-3">
        <label for="novaSenha" class="form-label">Nova Senha:</label>
        <input type="password" asp-for="NovaSenha" class="form-control" id="novaSenha" placeholder="Digite a nova senha do usuário:">
        <span class="text-danger">@Html.ValidationMessageFor(valid => valid.NovaSenha)</span>
    </div>    <div class="mb-3">
        <label for="confirmarNovaSenha" class="form-label">Confirmar nova senha:</label>
        <input type="password" asp-for="ConfirmarNovaSenha" class="form-control" id="confirmarNovaSenha" placeholder="Digite a confirmação da nova senha do usuário:">
        <span class="text-danger">@Html.ValidationMessageFor(valid => valid.ConfirmarNovaSenha)</span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-block">Alterar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
    </div>
</form>