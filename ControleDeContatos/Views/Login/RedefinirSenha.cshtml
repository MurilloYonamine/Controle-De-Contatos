@model RedefinirSenhaModel;
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}
<form method="post" asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha">
    <div class="mb-3">
        <label for="login" class="form-label">Login:</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        <span class="text-danger">@Html.ValidationMessageFor(valid => valid.Login)</span>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail:</label>
        <input type="email" asp-for="Email" class="form-control" id="email">
        <span class="text-danger">@Html.ValidationMessageFor(valid => valid.Email)</span>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Redefinir Senha</button>
        <a class="btn btn-secondary btn-block" asp-controller="Login" asp-action="Index" role="button">Voltar</a>
    </div>
</form>